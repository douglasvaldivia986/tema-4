 var hoy_es = "sabado";
        switch (hoy_es){
            case "lunes":
            case "martes":
            case "miercoles":
            case "jueves":
            case "viernes":
                System.out.println("hoy es un dia laborable");
                break;
            case "domingo":
            case "sabado":
                System.out.println("hoy no es un dia laborable");
       }

        var estacion="invierno";
        switch (estacion) {
            case "verano":
                System.out.println("es verano");
                break;
            case "invierno":
                System.out.println("es invierno");
                break;
            default:
                System.out.println("es otra estacion");
        }